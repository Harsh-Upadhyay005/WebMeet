# Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git

PORT=3000
NODE_ENV=production

# MongoDB Connection
MONGO_URI=your_production_mongodb_uri_here

# Stream Chat API Keys
STREAM_API_KEY=your_production_stream_api_key
STREAM_API_SECRET=your_production_stream_api_secret

# JWT Secret (Generate a strong random secret)
JWT_SECRET_KEY=your_production_jwt_secret_here

# Frontend URL (Your deployed Vercel app URL)
CLIENT_URL=https://your-production-app.vercel.app
